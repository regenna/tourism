@model web_do_an.Areas.Admin.Models.LoginSignUpViewModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="/css/admin/mycss.css">
    <title>Modern Login Page | AsmrProg</title>
</head>
<body>
    <div class="container" id="container">
        <!-- Form đăng ký -->
        <div class="form-container sign-up">
            @using (Html.BeginForm("Create", "Login", FormMethod.Post))
            {
                <h1>Create Account</h1>
                <div class="social-icons">
                    <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-github"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
                <span>or use your email for registration</span>


                @Html.TextBoxFor(model => model.SignUpModel.TenTK, new { @placeholder = "UserName", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SignUpModel.TenTK, "", new { @class = "text-danger" })

                @Html.TextBoxFor(model => model.SignUpModel.Email, new { @placeholder = "Email", @class = "form-control", @type = "email" })
                @Html.ValidationMessageFor(model => model.SignUpModel.Email, "", new { @class = "text-danger" })

                @Html.TextBoxFor(model => model.SignUpModel.SDT, new { @placeholder = "Phone Number", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SignUpModel.SDT, "", new { @class = "text-danger" })

                @Html.PasswordFor(model => model.SignUpModel.MatKhau, new { @placeholder = "Password", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SignUpModel.MatKhau, "", new { @class = "text-danger" })

                <button type="submit" class="btn btn-primary">Sign Up</button>
            }
        </div>
        <div class="form-container sign-in">
            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                <h1>Sign In</h1>
                <div class="social-icons">
                    <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-github"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
                <span>or use your email password</span>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.TextBoxFor(model => model.LoginModel.TenTK, new { @placeholder = "UserName", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LoginModel.TenTK, "", new { @class = "text-danger" })

                @Html.PasswordFor(model => model.LoginModel.MatKhau, new { @placeholder = "Password", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LoginModel.MatKhau, "", new { @class = "text-danger" })

                @Html.CheckBoxFor(model => model.LoginModel.RememberMe)
                <button type="submit" class="btn btn-primary">Sign In</button>
            }

        </div>

        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Welcome Back!</h1>
                    <p>Enter your personal details to use all of site features</p>
                    <button class="hidden" id="login">Sign In</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Hello, Friend!</h1>
                    <p>Register with your personal details to use all of site features</p>
                    <button class="hidden" id="register">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/admin/JS.js"></script>
</body>
</html>