@model web_do_an.Models.View_Model.TourViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/css/chitiet/mycss.css">
    <!-- <link rel="stylesheet" href="tailwindcss/css/main.css"> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#"><b>Tour Nhà Thỏ</b></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="TrangChu.html">Trang Chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="DanhSach.html">Tour</a></li>
                    <li class="nav-item"><a class="nav-link" href="TaiKhoanUser.html">Tài Khoản</a></li>
                    <li class="nav-item"><a class="nav-link" href="deals.html">Ưu Đãi</a></li>
                    <li class="nav-item"><a class="nav-link" href="contact.html">Liên Hệ</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <main>
        <header>
            <h1 class="tour-title">@Model.Tours.FirstOrDefault()?.TenTour</h1>
        </header>
        <div class="container container-1">
            <div class="row">
                <div class="col col-md-8">
                    <div class="tour-gallery">
                        <div class="main-image-container">
                            <!-- <div class="budget-tag">
                                <i class="fas fa-piggy-bank"></i> Tour Tiết Kiệm
                            </div> -->
                            <img src="hinh/a1.jpg" alt="Đài Loan" class="main-image">
                            <button class="nav-btn prev-btn"><i class="fas fa-chevron-left"></i></button>
                            <button class="nav-btn next-btn"><i class="fas fa-chevron-right"></i></button>
                        </div>
                        <div class="thumbnail-gallery">
                            <img src="https://images2.thanhnien.vn/528068263637045248/2024/1/25/e093e9cfc9027d6a142358d24d2ee350-65a11ac2af785880-17061562929701875684912.jpg" alt="Thumbnail 1" class="thumbnail">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRFk6JFYyeZYDgnfPZagwFAWawtaSfZdoLOyGNXySjYzMkwAx71mm-TCTI4OH5uVQfrFS8&usqp=CAU" alt="Thumbnail 2" class="thumbnail">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcReUHbLiwF1jwaJXlfyFrxB4TDbH1g9ZDLrEQAjjmOCXtL-nLc-uGEmxA60x2yowEW9NHg&usqp=CAU" alt="Thumbnail 3" class="thumbnail">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcToDmZxO1uX-1z71zyz8PqG5fO83oN6_uRMKA&s" alt="Thumbnail 4" class="thumbnail">
                        </div>
                    </div>
                    <div class="card card-1">
                    </div>
                    <!-- Bảng lịch khởi hành trong col-md-8 -->
                    <div class="tour-schedule-pricing mt-4">
                        <h3>Lịch khởi hành & giá tour</h3>
                        <div class="table-responsive">
                            <table class="schedule-table">
                                <thead>
                                    <tr>
                                        <th>Ngày khởi hành</th>
                                        <th>Ngày về</th>
                                        <th>Giá</th>
                                        <th>Tình trạng chỗ</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>T5, 03/04/2025</td>
                                        <td>CN, 06/04/2025</td>
                                        <td class="price">9.990.000đ</td>
                                        <td>Còn 8 chỗ</td>
                                        <td><a href="#" class="info-btn"><i class="fas fa-info-circle"></i></a></td>
                                    </tr>
                                    <tr>
                                        <td>T5, 17/04/2025</td>
                                        <td>CN, 20/04/2025</td>
                                        <td class="price">10.990.000đ</td>
                                        <td>Còn 12 chỗ</td>
                                        <td><a href="#" class="info-btn"><i class="fas fa-info-circle"></i></a></td>
                                    </tr>
                                    <tr>
                                        <td>T5, 15/05/2025</td>
                                        <td>CN, 18/05/2025</td>
                                        <td class="price">10.990.000đ</td>
                                        <td>Còn 5 chỗ</td>
                                        <td><a href="#" class="info-btn"><i class="fas fa-info-circle"></i></a></td>
                                    </tr>
                                    <tr>
                                        <td>T5, 29/05/2025</td>
                                        <td>CN, 01/06/2025</td>
                                        <td class="price">10.990.000đ</td>
                                        <td>Còn 15 chỗ</td>
                                        <td><a href="#" class="info-btn"><i class="fas fa-info-circle"></i></a></td>
                                    </tr>
                                    <tr>
                                        <td>T5, 12/06/2025</td>
                                        <td>CN, 15/06/2025</td>
                                        <td class="price">11.490.000đ</td>
                                        <td>Còn 10 chỗ</td>
                                        <td><a href="#" class="info-btn"><i class="fas fa-info-circle"></i></a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="view-more mt-2">
                            <button class="view-more-btn">Xem thêm <i class="fas fa-chevron-down"></i></button>
                        </div>
                    </div>
                </div>
                <div class="col col-md-4">
                    <div class="tour-selection">
                        <h2>Lịch Trình và Giá Tour</h2>
                        <div class="dates">
                            <button class="date-btn active">20/03</button>
                            <button class="date-btn">03/04</button>
                            <button class="date-btn">17/04</button>
                            <button class="date-btn">Tất cả</button>
                        </div>

                        <div class="passenger">
                            <div class="label-col">
                                <label for="adults">Người lớn <span>(> 10 tuổi)</span></label>
                            </div>
                            <div class="price-col">
                                <span id="price-adult">1.000.000</span>
                            </div>
                            <div class="quantity-col">
                                <button class="minus">-</button>
                                <input id="adults" value="4" min="0">
                                <button class="plus">+</button>
                            </div>
                        </div>

                        <div class="passenger">
                            <div class="label-col">
                                <label for="children">Trẻ em <span>(2 - 10 tuổi)</span></label>
                            </div>
                            <div class="price-col">
                                <span id="price-child">800.000</span>
                            </div>
                            <div class="quantity-col">
                                <button class="minus">-</button>
                                <input id="children" value="0" min="0">
                                <button class="plus">+</button>
                            </div>
                        </div>

                        <div class="passenger">
                            <div class="label-col">
                                <label for="infants">Trẻ nhỏ <span>(< 2 tuổi)</span></label>
                            </div>
                            <div class="price-col">
                                <span id="price-infant">500.000</span>
                            </div>
                            <div class="quantity-col">
                                <button class="minus">-</button>
                                <input id="infants" value="0" min="0">
                                <button class="plus">+</button>
                            </div>
                        </div>


                        <div class="total-price">
                            <span>Tổng Giá Tour:</span>
                            <span class="tal-price" id="total-price">2.000.000 VND</span></p>
                        </div>

                        <button class="btn-submit">Yêu cầu đặt</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="container container-2 mt-4">
            <h1>Tours du lịch liên quan</h1>
            <div class="row">
                <div class="col left-col">
                    <div class="tour-card">
                        <div class="tour-image">
                            <img src="hinh/a1.jpg" alt="Tour Image">
                        </div>
                        <div class="tour-details">
                            <h3>Tour Đài Loan 5N4Đ: Hà Nội - Cao Hùng - Đài Trung - Đài Bắc - Du Thuyền Hồ Nhật Nguyệt</h3>
                            <p class="tour-duration">5 Ngày 4 Đêm</p>
                            <div class="tour-location">
                                <span>Phố Cổ Thập Phần</span>
                                <span>Du Thuyền Hồ Nhật Nguyệt</span>
                                <span>Công Viên Dương Minh Sơn</span>
                            </div>
                            <p class="tour-price">12.490.000 VND</p>
                        </div>
                    </div>
                </div>
                <div class="col mid-col">
                    <div class="tour-card">
                        <div class="tour-image">
                            <img src="hinh/a1.jpg" alt="Tour Image">
                        </div>
                        <div class="tour-details">
                            <h3>Tour Đài Loan 5N4Đ: Hà Nội - Cao Hùng - Đài Trung - Đài Bắc - Du Thuyền Hồ Nhật Nguyệt</h3>
                            <p class="tour-duration">5 Ngày 4 Đêm</p>
                            <div class="tour-location">
                                <span>Phố Cổ Thập Phần</span>
                                <span>Du Thuyền Hồ Nhật Nguyệt</span>
                                <span>Công Viên Dương Minh Sơn</span>
                            </div>
                            <p class="tour-price">12.490.000 VND</p>
                        </div>
                    </div>
                </div>
                <div class="col right-col">
                    <div class="tour-card">
                        <div class="tour-image">
                            <img src="hinh/a1.jpg" alt="Tour Image">
                        </div>
                        <div class="tour-details">
                            <h3>Tour Đài Loan 5N4Đ: Hà Nội - Cao Hùng - Đài Trung - Đài Bắc - Du Thuyền Hồ Nhật Nguyệt</h3>
                            <p class="tour-duration">5 Ngày 4 Đêm</p>
                            <div class="tour-location">
                                <span>Phố Cổ Thập Phần</span>
                                <span>Du Thuyền Hồ Nhật Nguyệt</span>
                                <span>Công Viên Dương Minh Sơn</span>
                            </div>
                            <p class="tour-price">12.490.000 VND</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </main>
    <!-- Chat buttons -->
    <div class="chat-buttons">
        <a href="#" class="chat-btn zalo"><img src="https://cdn.haitrieu.com/wp-content/uploads/2022/01/Logo-Zalo-Arc.png" alt="Zalo"></a>
        <a href="#" class="chat-btn messenger"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/be/Facebook_Messenger_logo_2020.svg/2048px-Facebook_Messenger_logo_2020.svg.png" alt="Messenger"></a>
    </div>


    <!-- Liên kết với file JavaScript -->
    <script src="/css/chitiet/JS.js"></script>
</body>
</html>
