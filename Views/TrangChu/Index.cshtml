    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // Khởi tạo AOS với thời gian nhanh hơn
        AOS.init({
            duration: 500,
            once: true,
            offset: 50
        });

        // Hiệu ứng parallax cho header
        window.addEventListener('scroll', function () {
            const parallax = document.getElementById('parallax-header');
            if (parallax) {
                let scrollPosition = window.pageYOffset;
                parallax.style.backgroundPositionY = (scrollPosition * 0.3) + 'px';
            }
        });

        // Hiệu ứng sticky nav
        window.addEventListener('scroll', function () {
            const navbar = document.getElementById('navbar');
            if (navbar) {
                if (window.scrollY > 50) {
                    navbar.classList.add('sticky');
                } else {
                    navbar.classList.remove('sticky');
                }
            }
        });

        // Khởi tạo carousel
        document.addEventListener('DOMContentLoaded', function () {
            const carousels = document.querySelectorAll('.carousel');

            // Tạo một ID duy nhất cho mỗi carousel để dễ quản lý
            carousels.forEach((carousel, index) => {
                carousel.setAttribute('data-carousel-id', `carousel-${index}`);
                const slides = carousel.querySelectorAll('.carousel-item');
                const inner = carousel.querySelector('.carousel-inner');
                const dots = carousel.querySelectorAll('.carousel-indicators .dot');

                // Khởi tạo thuộc tính dữ liệu cho mỗi carousel
                carousel.dataset.currentSlide = 0;
                carousel.dataset.totalSlides = slides.length;

                // Xử lý event touch cho mobile
                let touchStartX = 0;
                let touchEndX = 0;

                carousel.addEventListener('touchstart', function (e) {
                    touchStartX = e.changedTouches[0].screenX;
                });

                carousel.addEventListener('touchend', function (e) {
                    touchEndX = e.changedTouches[0].screenX;
                    handleSwipe(carousel);
                });

                function handleSwipe(carousel) {
                    if (touchEndX < touchStartX) {
                        // Vuốt sang trái -> Chuyển sang slide tiếp theo
                        nextSlide(carousel);
                    } else if (touchEndX > touchStartX) {
                        // Vuốt sang phải -> Chuyển sang slide trước
                        prevSlide(carousel);
                    }
                }

                // Đánh dấu slide đầu tiên là active
                if (slides.length > 0) {
                    updateDots(carousel, 0);
                }

                // Tự động chuyển slide sau mỗi 5 giây
                setInterval(function () {
                    nextSlide(carousel);
                }, 5000);

                // Thêm sự kiện click cho dots của carousel này
                const dotsForThisCarousel = carousel.querySelectorAll('.carousel-indicators .dot');
                dotsForThisCarousel.forEach((dot, dotIndex) => {
                    dot.addEventListener('click', function () {
                        goToSlide(carousel, dotIndex);
                    });
                });
            });
        });

        // Hàm cập nhật trạng thái dots
        function updateDots(carousel, activeIndex) {
            // Chỉ cập nhật dots trong carousel được chỉ định
            const dots = carousel.querySelectorAll('.carousel-indicators .dot');

            dots.forEach((dot, index) => {
                if (index === activeIndex) {
                    dot.classList.remove('opacity-50');
                } else {
                    dot.classList.add('opacity-50');
                }
            });

            // Lưu lại vị trí slide hiện tại
            carousel.dataset.currentSlide = activeIndex;
        }

        // Hàm chuyển đến slide trước
        function prevSlide(carousel) {
            const slides = carousel.querySelectorAll('.carousel-item');
            const inner = carousel.querySelector('.carousel-inner');
            const slideWidth = slides[0].clientWidth;

            // Lấy thông tin từ dataset
            let currentSlide = parseInt(carousel.dataset.currentSlide || 0);
            const totalSlides = slides.length;

            // Tính toán slide mới
            let newSlide = currentSlide - 1;
            if (newSlide < 0) newSlide = totalSlides - 1;

            // Cập nhật vị trí
            const newPosition = -slideWidth * newSlide;
            inner.style.transform = `translateX(${newPosition}px)`;

            // Cập nhật dots
            updateDots(carousel, newSlide);
        }

        // Hàm chuyển đến slide tiếp theo
        function nextSlide(carousel) {
            const slides = carousel.querySelectorAll('.carousel-item');
            const inner = carousel.querySelector('.carousel-inner');
            const slideWidth = slides[0].clientWidth;

            // Lấy thông tin từ dataset
            let currentSlide = parseInt(carousel.dataset.currentSlide || 0);
            const totalSlides = slides.length;

            // Tính toán slide mới
            let newSlide = currentSlide + 1;
            if (newSlide >= totalSlides) newSlide = 0;

            // Cập nhật vị trí
            const newPosition = -slideWidth * newSlide;
            inner.style.transform = `translateX(${newPosition}px)`;

            // Cập nhật dots
            updateDots(carousel, newSlide);
        }

        // Hàm chuyển đến slide cụ thể
        function goToSlide(carousel, index) {
            const slides = carousel.querySelectorAll('.carousel-item');
            const inner = carousel.querySelector('.carousel-inner');
            const slideWidth = slides[0].clientWidth;

            // Kiểm tra giới hạn index
            if (index < 0) index = 0;
            if (index >= slides.length) index = slides.length - 1;

            // Cập nhật vị trí
            const position = -slideWidth * index;
            inner.style.transform = `translateX(${position}px)`;

            // Cập nhật dots
            updateDots(carousel, index);
        }

        // Hiệu ứng ripple cho các button
        document.addEventListener('click', function (e) {
            if (e.target.classList.contains('hover-button') || e.target.parentElement.classList.contains('hover-button')) {
                const button = e.target.classList.contains('hover-button') ? e.target : e.target.parentElement;
                const circle = document.createElement('span');
                const diameter = Math.max(button.clientWidth, button.clientHeight);

                circle.style.width = circle.style.height = `${diameter}px`;
                circle.style.left = `${e.clientX - button.offsetLeft - diameter / 2}px`;
                circle.style.top = `${e.clientY - button.offsetTop - diameter / 2}px`;
                circle.classList.add('ripple');

                const ripple = button.querySelector('.ripple');
                if (ripple) {
                    ripple.remove();
                }

                button.appendChild(circle);
            }
        });

        // Smooth scroll cho các liên kết
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
