@model IEnumerable<web_do_an.Models.Model_TT.Tour>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vietnam Travel - Khám phá vẻ đẹp Việt Nam</title>
	<link rel="stylesheet" href="/css/view.css">
   
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.5/swiper-bundle.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <!-- Preloader -->
    <div class="preloader">
        <div class="loader">
            <div class="circle"></div>
            <div class="circle"></div>
            <div class="circle"></div>
        </div>
    </div>

    <!-- Modern Header như trong ảnh -->
    <nav class="modern-nav">
        <div class="nav-container">
            <a href="#" class="nav-logo">
                <div class="logo-icon"><i class="fas fa-sailboat"></i></div>
                Travel<span>.</span>
            </a>
            
            <div class="nav-right">
                <a href="#" class="book-now">BOOK NOW</a>
                <button class="mobile-menu-toggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>
    </nav>

    <!-- Hero Section với búng đường mờ -->
    <header class="modern-hero">
        <div class="hero-content">
            <h1 class="hero-title">Search your next Holiday</h1>
            <p class="hero-subtitle">CHECK OUR BEST PROMOTIONS</p>

            <div class="search-container">
                <div class="search-location">
                    <select id="locationSelect">
                        <option value="">Từ Hà Nội</option>
                        <option value="hcm">Từ Hồ Chí Minh</option>
                        <option value="danang">Từ Đà Nẵng</option>
                        <option value="nhatrang">Từ Nha Trang</option>
                        <option value="phuquoc">Từ Phú Quốc</option>
                    </select>
                </div>
                <div class="search-destination">
                    <input type="text" placeholder="Bạn muốn đi đâu?">
                </div>
                <button class="search-button">
                    <i class="fas fa-search"></i> TÌM TOUR NGAY
                </button>
            </div>

            <div class="category-icons">
                <div class="icon-box">
                    <div class="icon-circle">
                        <i class="fas fa-cocktail"></i>
                    </div>
                    <span>RELAX</span>
                </div>
                <div class="icon-box">
                    <div class="icon-circle">
                        <i class="fas fa-landmark"></i>
                    </div>
                    <span>CULTURAL</span>
                </div>
                <div class="icon-box">
                    <div class="icon-circle">
                        <i class="fas fa-hiking"></i>
                    </div>
                    <span>SPORT</span>
                </div>
                <div class="icon-box">
                    <div class="icon-circle">
                        <i class="fas fa-camera"></i>
                    </div>
                    <span>HISTORY</span>
                </div>
            </div>
        </div>

        <!-- Hiệu ứng sọc sáng chạy ngang qua -->
        <div class="light-beam"></div>
    </header>

    <section class="popular-tours">
        <div class="container mx-auto p-6">
            <h2 class="section-title" data-aos="fade-up">Tour du lịch nổi bật</h2>
            <p class="section-subtitle" data-aos="fade-up">Khám phá những điểm đến đang được yêu thích nhất</p>

            <div class="swiper tourSwiper" data-aos="fade-up" data-aos-delay="200">
                <div class="swiper-wrapper">
                    @if (Model == null || !Model.Any())
                    {
                        <p>Không có tour nào để hiển thị.</p>
                    }
                    else
                    {
                    @foreach (var tour in Model)
                    {

                        

                        <div class="swiper-slide">
                            <div class="card bg-white rounded-xl overflow-hidden shadow-lg">
                                <div class="card-img">
                                    <img src="@tour.AnhDaiDien" alt="@tour.TenTour" class="w-full h-60 object-cover">
                                </div>
                                <div class="p-4">
                                    <span class="location"><i class="fas fa-map-marker-alt"></i> @tour.MoTaTour</span>
                                    <h3 class="text-lg font-bold">@tour.TenTour</h3>
                                    <div class="flex justify-between items-center mt-4">
                                        <p class="text-lg font-semibold text-gray-700">
                                            <span class="text-green-600">@String.Format("{0:N0}₫", tour.Gia)</span>
                                        </p>
                                        <a href="/TrangChu/Details/@tour.MaTour" class="book-btn">Xem chi tiết</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    }
                </div>
                <div class="swiper-pagination"></div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>

            <div class="more-button" data-aos="fade-up">
                <a href="#">Xem tất cả các tour <i class="fas fa-arrow-right"></i></a>
            </div>
        </div>
    </section>

    <section class="tour-categories">
        <div class="container mx-auto p-6">
            <h2 class="section-title" data-aos="fade-up">Tour du lịch theo chủ đề</h2>
            <p class="section-subtitle" data-aos="fade-up">Lựa chọn tour phù hợp với sở thích và phong cách của bạn</p>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mt-8">
                @foreach (var tour in Model)
                {
                 

                    <div class="category-card" data-aos="fade-up">
                        <div class="card-image">
                            <img src="@tour.AnhDaiDien" alt="@tour.TenTour">
                        </div>
                        <div class="card-body">
                            <h3 class="card-title">@tour.TenTour</h3>
                            <div class="card-info">
                                <span><i class="fas fa-map-marker-alt"></i> @tour.MoTaTour</span>
                                <span><i class="fas fa-calendar-alt"></i> @tour.SoNgay ngày</span>
                            </div>
                            <div class="card-price">
                                <span class="price">@String.Format("{0:N0}₫", tour.Gia)</span>
                            </div>
                            <a href="/TrangChu/Details/@tour.MaTour" class="card-button">Xem chi tiết</a>
                        </div>
                    </div>
                }
            </div> <!-- Đây là kết thúc đúng -->

        </div>
    </section>

    <footer>
        <div class="footer-container">
            <div class="footer-col" data-aos="fade-up" data-aos-delay="100">
                <h3>Vietnam Travel</h3>
                <p>Đồng hành cùng bạn khám phá vẻ đẹp Việt Nam với những trải nghiệm du lịch tuyệt vời và đáng nhớ.</p>
                <div class="footer-social">
                    <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                </div>
            </div>

            <div class="footer-col" data-aos="fade-up" data-aos-delay="200">
                <h3>Liên Kết Nhanh</h3>
                <ul class="footer-links">
                    <li><a href="#destinations">Điểm Đến</a></li>
                    <li><a href="#services">Dịch Vụ</a></li>
                    <li><a href="#about">Về Chúng Tôi</a></li>
                    <li><a href="#testimonials">Đánh Giá</a></li>
                    <li><a href="#contact">Liên Hệ</a></li>
                </ul>
            </div>

            <div class="footer-col" data-aos="fade-up" data-aos-delay="300">
                <h3>Vị Trí</h3>
                <ul class="footer-links">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2979.6377650418153!2d106.78212350913388!3d10.8550347892539!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317527006db97ff1%3A0x8ed7036831a229d3!2sHUTECH%20E%202!5e1!3m2!1svi!2s!4v1741144811825!5m2!1svi!2s"
                            allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </ul>
            </div>
        </div>

        <div class="footer-bottom">
            <p>.</p>
        </div>
    </footer>

    <!-- JS Libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.5/swiper-bundle.min.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>

    <script>
        // Initialize AOS
        AOS.init({
            duration: 800,
            once: true
        });

        // Initialize Swiper
        const swiper = new Swiper('.tourSwiper', {
            slidesPerView: 1,
            spaceBetween: 30,
            loop: true,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },
            breakpoints: {
                640: {
                    slidesPerView: 2,
                },
                1024: {
                    slidesPerView: 3,
                },
                1280: {
                    slidesPerView: 4,
                }
            }
        });

        // Preloader
        window.addEventListener('load', function() {
            const preloader = document.querySelector('.preloader');
            preloader.classList.add('preloader-hide');

            setTimeout(function() {
                preloader.style.display = 'none';
            }, 1000);
        });

        // Mobile Menu
        const mobileMenuBtn = document.querySelector('.mobile-menu-toggle');
        const navMenu = document.querySelector('.nav-menu');

        mobileMenuBtn.addEventListener('click', function() {
            navMenu.classList.toggle('active');
            this.classList.toggle('active');
        });

        // Navbar Scroll Effect
        window.addEventListener('scroll', function() {
            const nav = document.querySelector('nav');
            if (window.scrollY > 50) {
                nav.classList.add('scrolled');
            } else {
                nav.classList.remove('scrolled');
            }
        });

        // Xử lý chuyển tab tour
        const categoryTabs = document.querySelectorAll('.category-tab');
        const categoryContents = document.querySelectorAll('.category-content');

        categoryTabs.forEach(tab => {
            tab.addEventListener('click', () => {
                // Xóa trạng thái active cho tất cả tab
                categoryTabs.forEach(t => t.classList.remove('active'));

                // Thêm trạng thái active cho tab được click
                tab.classList.add('active');

                // Lấy category từ data attribute
                const category = tab.getAttribute('data-category');

                // Ẩn tất cả nội dung
                categoryContents.forEach(content => {
                    content.classList.remove('active');
                });

                // Hiển thị nội dung tương ứng
                document.getElementById(category).classList.add('active');
            });
        });
    </script>
</body>

</html>